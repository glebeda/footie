{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Backend",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start"],
        "cwd": "${workspaceFolder}/backend",
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest Tests",
        "program": "${workspaceFolder}/backend/node_modules/.bin/jest",
        "args": ["--runInBand"],
        "cwd": "${workspaceFolder}/backend",
        "console": "integratedTerminal",
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
            "NODE_ENV": "test"
        }
    }
  ]
}